#/*****************************************************************************************************************/

# The name of the base container:
CONTAINER_NAME="observerly/sidera"

#/*****************************************************************************************************************/

# Test the application
test:
	@echo "Testing..."
	@go test ./... -v

#/*****************************************************************************************************************/

# Format the application code
format:
	@echo "Formatting..."
	@go fmt ./...

#/*****************************************************************************************************************/

# Vet the application code
vet:
	@echo "Vetting..."
	@go vet ./...

#/*****************************************************************************************************************/

# Lint the application code
lint:
	@echo "Linting..."
	@staticcheck ./...

#/*****************************************************************************************************************/

# Run GoCritic
critic: 
	@echo "Running Critic..."
	@gocritic check ./...

#/*****************************************************************************************************************/

.PHONY: test format vet lint critic

#/*****************************************************************************************************************/
